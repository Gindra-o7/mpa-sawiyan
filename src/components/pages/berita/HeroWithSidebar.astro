---
import { ArrowRight } from "lucide-astro";

interface BeritaItem {
  slug: string;
  category: string;
  judul: string;
  thumbnail: string;
  excerpt: string;
  date_created: string;
  author: string;
}

const { heroBerita, sidebarBerita } = Astro.props;
---

<section class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-16">
  <!-- Hero Section (Left - 2 columns) -->
  <div class="lg:col-span-2 relative h-[500px] md:h-[600px] overflow-hidden rounded-2xl">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img src={heroBerita.thumbnail} alt={heroBerita.judul} class="w-full h-full object-cover" loading="eager" />
      <!-- Dark Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 h-full flex flex-col justify-end p-8 md:p-12">
      <div class="max-w-2xl">
        <!-- Small Heading -->
        <div class="text-sm font-semibold text-white/90 mb-3 uppercase tracking-wider">Berita & Pengumuman</div>

        <!-- Headline -->
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 leading-tight">
          {heroBerita.judul}
        </h1>

        <!-- Description -->
        <p class="text-white/90 text-base md:text-lg mb-6 leading-relaxed max-w-xl">
          {heroBerita.excerpt}
        </p>

        <!-- Call to Action -->
        <a
          href={`/berita/${heroBerita.slug}`}
          class="group inline-flex items-center gap-2 px-6 py-3 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gradient-to-r hover:from-[#388E3C] hover:to-[#81D4FA] hover:text-white transition-all duration-300 shadow-lg"
        >
          <span>Jelajahi</span>
          <ArrowRight class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" />
        </a>
      </div>
    </div>
  </div>

  <!-- Sidebar (Right - 1 column) -->
  <div class="lg:col-span-1 space-y-6">
    <!-- Featured Article (Top) -->
    <article class="group bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden">
      <a href={`/berita/${sidebarBerita[0].slug}`} class="block">
        <div class="relative h-48 overflow-hidden">
          <img src={sidebarBerita[0].thumbnail} alt={sidebarBerita[0].judul} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
          <div class="absolute inset-0 bg-gradient-to-t from-[#388E3C]/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <div class="p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-[#388E3C] transition-colors duration-200 line-clamp-2">
            {sidebarBerita[0].judul}
          </h3>
          <div class="text-sm text-gray-500">
            {sidebarBerita[0].author} â€¢ {
              new Intl.DateTimeFormat("id-ID", {
                day: "numeric",
                month: "short",
                year: "numeric",
              }).format(new Date(sidebarBerita[0].date_created))
            }
          </div>
        </div>
      </a>
    </article>

    <!-- Article List (Below) -->
    <div class="space-y-4">
      {
        sidebarBerita.slice(1).map((berita: BeritaItem) => (
          <article class="group">
            <a href={`/berita/${berita.slug}`} class="block">
              <div class="flex items-start gap-3">
                <div class="flex-1 min-w-0">
                  <div class="mb-1">
                    <span class="inline-block px-2.5 py-1 bg-[#81D4FA]/10 text-[#388E3C] text-xs font-bold rounded uppercase">{berita.category}</span>
                  </div>
                  <h4 class="text-base font-semibold text-gray-900 mb-1 group-hover:text-[#388E3C] transition-colors duration-200 line-clamp-2">{berita.judul}</h4>
                  <div class="text-sm text-gray-500">
                    {berita.author}{" "}
                    {new Intl.DateTimeFormat("id-ID", {
                      month: "short",
                      day: "numeric",
                      year: "numeric",
                    }).format(new Date(berita.date_created))}
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>
