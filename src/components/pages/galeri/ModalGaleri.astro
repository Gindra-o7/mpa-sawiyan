---
import { X, ChevronLeft, ChevronRight } from "lucide-astro";

interface GaleriKegiatan {
  id: string;
  title: string;
  category: string;
  mainImage: string;
  thumbnails: string[];
  totalPhotos: number;
  date: string;
  images: string[];
}

const { kegiatan } = Astro.props;
---

<!-- Modal -->
<div id="gallery-modal" class="fixed inset-0 bg-black/90 z-[200] hidden items-center justify-center p-4">
  <div class="relative w-full max-w-6xl max-h-[90vh] flex flex-col">
    <!-- Close Button -->
    <button id="modal-close-btn" class="absolute top-4 right-4 z-10 w-10 h-10 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-white transition-all duration-200 hover:scale-110">
      <X class="w-6 h-6" />
    </button>

    <!-- Modal Header -->
    <div class="bg-white rounded-t-2xl p-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 id="modal-title" class="text-2xl font-bold text-gray-900 mb-2"></h2>
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <span id="modal-category"></span>
            <span id="modal-date"></span>
            <span id="modal-photos"></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Content -->
    <div class="bg-white rounded-b-2xl overflow-hidden relative">
      <!-- Main Image -->
      <div class="relative h-[60vh] bg-gray-900">
        <img id="modal-main-image" src="" alt="" class="w-full h-full object-contain" />
      </div>

      <!-- Navigation Buttons -->
      <button
        id="modal-prev-btn"
        class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-white transition-all duration-200 hover:scale-110 z-10"
      >
        <ChevronLeft class="w-6 h-6" />
      </button>
      <button
        id="modal-next-btn"
        class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/10 hover:bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-white transition-all duration-200 hover:scale-110 z-10"
      >
        <ChevronRight class="w-6 h-6" />
      </button>

      <!-- Thumbnail Strip -->
      <div class="bg-gray-100 p-4 overflow-x-auto">
        <div id="modal-thumbnails" class="flex gap-2"></div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ kegiatan }}>
  const modal = document.getElementById("gallery-modal");
  const modalTitle = document.getElementById("modal-title");
  const modalCategory = document.getElementById("modal-category");
  const modalDate = document.getElementById("modal-date");
  const modalPhotos = document.getElementById("modal-photos");
  const modalMainImage = document.getElementById("modal-main-image");
  const modalThumbnails = document.getElementById("modal-thumbnails");
  const closeBtn = document.getElementById("modal-close-btn");
  const prevBtn = document.getElementById("modal-prev-btn");
  const nextBtn = document.getElementById("modal-next-btn");

  let currentGallery = null;
  let currentImageIndex = 0;

  const kegiatanData = kegiatan;

  // Function to open modal - make it globally accessible
  const openModal = (galleryId) => {
    const gallery = kegiatanData.find((k) => k.id === galleryId);

    if (!gallery || !modal || !modalTitle || !modalCategory || !modalDate || !modalPhotos || !modalMainImage || !modalThumbnails) {
      console.error("Modal elements not found or gallery not found:", galleryId, {
        gallery: !!gallery,
        modal: !!modal,
        modalTitle: !!modalTitle,
        modalCategory: !!modalCategory,
        modalDate: !!modalDate,
        modalPhotos: !!modalPhotos,
        modalMainImage: !!modalMainImage,
        modalThumbnails: !!modalThumbnails,
      });
      return;
    }

    currentGallery = gallery;
    currentImageIndex = 0;

    // Update modal content
    modalTitle.textContent = gallery.title;
    modalCategory.textContent = gallery.category;
    modalDate.textContent = gallery.date;
    modalPhotos.textContent = `${gallery.totalPhotos} Foto`;

    // Update main image
    modalMainImage.src = gallery.images[0];
    modalMainImage.alt = gallery.title;

    // Update thumbnails
    modalThumbnails.innerHTML = "";
    gallery.images.forEach((img, index) => {
      const thumb = document.createElement("div");
      thumb.className = `flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden cursor-pointer border-2 transition-all duration-200 ${index === 0 ? "border-[#388E3C]" : "border-transparent hover:border-[#388E3C]/50"}`;
      thumb.innerHTML = `<img src="${img}" alt="" class="w-full h-full object-cover" />`;
      thumb.addEventListener("click", () => {
        currentImageIndex = index;
        updateModalImage();
      });
      modalThumbnails.appendChild(thumb);
    });

    // Show modal
    modal.classList.remove("hidden");
    modal.classList.add("flex");
    document.body.style.overflow = "hidden";
  };

  // Make openModal globally accessible
  if (typeof window !== "undefined") {
    window.openGalleryModal = openModal;
  }

  // Listen for open modal event
  const handleOpenModal = (e) => {
    const customEvent = e;
    const galleryId = customEvent.detail?.id;
    console.log("Modal event received:", galleryId);
    if (galleryId) {
      openModal(galleryId);
    }
  };

  // Initialize modal listener immediately
  const initModalListener = () => {
    // Remove existing listener if any
    document.removeEventListener("openGalleryModal", handleOpenModal);
    // Add new listener
    document.addEventListener("openGalleryModal", handleOpenModal);
    console.log("Modal event listener initialized", {
      modal: !!modal,
      kegiatanData: kegiatanData.length,
    });
  };

  // Initialize immediately and also on DOM ready
  initModalListener();

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initModalListener);
  }

  const updateModalImage = () => {
    if (!currentGallery || !modalMainImage || !modalThumbnails) return;

    modalMainImage.src = currentGallery.images[currentImageIndex];

    // Update thumbnail selection
    const thumbs = modalThumbnails.querySelectorAll("div");
    thumbs.forEach((thumb, index) => {
      if (index === currentImageIndex) {
        thumb.classList.add("border-[#388E3C]");
        thumb.classList.remove("border-transparent");
      } else {
        thumb.classList.remove("border-[#388E3C]");
        thumb.classList.add("border-transparent");
      }
    });

    // Update navigation buttons
    if (prevBtn && nextBtn) {
      prevBtn.disabled = currentImageIndex === 0;
      nextBtn.disabled = currentImageIndex === currentGallery.images.length - 1;
    }
  };

  // Close modal
  if (closeBtn && modal) {
    closeBtn.addEventListener("click", () => {
      modal.classList.add("hidden");
      modal.classList.remove("flex");
      document.body.style.overflow = "";
    });
  }

  // Close on backdrop click
  if (modal) {
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        document.body.style.overflow = "";
      }
    });
  }

  // Navigation
  if (prevBtn) {
    prevBtn.addEventListener("click", () => {
      if (currentImageIndex > 0) {
        currentImageIndex--;
        updateModalImage();
      }
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener("click", () => {
      if (currentGallery && currentImageIndex < currentGallery.images.length - 1) {
        currentImageIndex++;
        updateModalImage();
      }
    });
  }

  // Keyboard navigation
  document.addEventListener("keydown", (e) => {
    if (modal && !modal.classList.contains("hidden")) {
      if (e.key === "Escape") {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        document.body.style.overflow = "";
      } else if (e.key === "ArrowLeft" && prevBtn) {
        prevBtn.click();
      } else if (e.key === "ArrowRight" && nextBtn) {
        nextBtn.click();
      }
    }
  });
</script>
