---
import { Clock, Calendar, MapPin, Heart } from "lucide-astro";
---

<section id="sejarah" class="bg-gradient-to-br from-[#F5F5F5] via-white to-[#F5F5F5] py-16 lg:py-24 overflow-hidden relative scroll-mt-20">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[#FFD180]/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#388E3C]/5 rounded-full blur-3xl -z-10"></div>

  <div class="container mx-auto px-6 md:px-8 max-w-7xl relative z-10">
    <div class="flex flex-col gap-12">
      {/* Header */}
      <div class="text-center max-w-3xl mx-auto space-y-4">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#FFD180]/10 rounded-full border border-[#FFD180]/20">
          <Clock class="w-4 h-4 text-[#FFD180]" />
          <span class="text-sm font-medium text-[#FFD180] uppercase tracking-wider">Sejarah</span>
        </div>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold bg-gradient-to-r from-[#388E3C] via-[#81D4FA] to-[#FFD700] bg-clip-text text-transparent leading-tight pb-1">Sejarah Yayasan Sawiyan</h2>
        <p class="text-lg text-gray-600">Perjalanan panjang yayasan dalam memberikan kontribusi positif bagi masyarakat</p>
      </div>

      {/* Timeline */}
      <div class="relative">
        {/* Timeline Line */}
        <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#388E3C] via-[#81D4FA] to-[#FFD180] hidden md:block"></div>

        {/* Timeline Items */}
        <div class="space-y-12">
          {
            [
              {
                year: "2015",
                title: "Pendirian Yayasan",
                description: "Yayasan Sawiyan didirikan dengan visi untuk memberikan kontribusi positif bagi masyarakat melalui program-program sosial, kemanusiaan, dan keagamaan.",
                icon: Heart,
                color: "#388E3C",
                side: "left",
              },
              {
                year: "2017",
                title: "Program Pertama",
                description: "Meluncurkan program beasiswa untuk siswa berprestasi dan keluarga kurang mampu, memberikan kesempatan pendidikan yang lebih baik.",
                icon: Calendar,
                color: "#81D4FA",
                side: "right",
              },
              {
                year: "2019",
                title: "Ekspansi Program",
                description: "Mengembangkan program kemanusiaan untuk membantu korban bencana alam dan masyarakat yang membutuhkan bantuan darurat.",
                icon: MapPin,
                color: "#FFD180",
                side: "left",
              },
              {
                year: "2022",
                title: "Program Keagamaan",
                description: "Memperluas program dengan menambahkan kegiatan keagamaan rutin dan kajian yang terbuka untuk umum.",
                icon: Heart,
                color: "#FFD700",
                side: "right",
              },
              {
                year: "2024",
                title: "Perkembangan Terkini",
                description: "Yayasan Sawiyan terus berkembang dengan program-program inovatif dan berkelanjutan yang memberikan dampak positif bagi masyarakat luas.",
                icon: Heart,
                color: "#388E3C",
                side: "left",
              },
            ].map((item) => {
              const IconComponent = item.icon;
              return (
                <div class={`flex flex-col md:flex-row items-center gap-6 ${item.side === "right" ? "md:flex-row-reverse" : ""}`}>
                  {/* Timeline Dot */}
                  <div class="relative z-10 flex-shrink-0">
                    <div class="w-16 h-16 rounded-full bg-white shadow-lg flex items-center justify-center border-4" style={`border-color: ${item.color};`}>
                      <IconComponent class="w-6 h-6" style={`color: ${item.color};`} />
                    </div>
                  </div>

                  {/* Content Card */}
                  <div class={`flex-1 ${item.side === "right" ? "md:text-right" : "md:text-left"} text-center md:text-left`}>
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 p-6 md:p-8 relative overflow-hidden">
                      {/* Decorative gradient accent */}
                      <div class="absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r" style={`background: linear-gradient(to right, ${item.color}, ${item.color}80);`} />

                      <div class="relative z-10">
                        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-semibold mb-4" style={`background: ${item.color}15; color: ${item.color};`}>
                          <Calendar class="w-4 h-4" />
                          {item.year}
                        </div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">{item.title}</h3>
                        <p class="text-gray-600 leading-relaxed">{item.description}</p>
                      </div>
                    </div>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
