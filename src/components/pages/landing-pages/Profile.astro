---
import { Heart, Users, BookOpen, Calendar } from "lucide-astro";

// Data untuk komponen ini didefinisikan di sini
const subTitle = "Tentang Yayasan";
const mainTitle = "Selamat datang di";
const strokedText = "YAYASAN SAWIYAN";
const description = "Sawiyan merupakan yayasan yang bergerak di bidang sosial, kemanusiaan, dan keagamaan dengan komitmen untuk memberikan kontribusi positif bagi masyarakat dan lingkungan sekitar.";

// Gambar baru dengan tema kemanusiaan
const img1Src = "https://images.unsplash.com/photo-1529156069898-49953e39b3ac?w=800&h=600&fit=crop";
const img2Src = "https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=800&h=600&fit=crop";

// Daftar bidang kegiatan dengan icon mapping
const facilitiesList = [
  { name: "Program Sosial", icon: Users, color: "#388E3C" },
  { name: "Program Kemanusiaan", icon: Heart, color: "#81D4FA" },
  { name: "Program Keagamaan", icon: BookOpen, color: "#FFD180" },
  { name: "Kegiatan Rutin", icon: Calendar, color: "#FFD700" },
];
---

<section class="bg-gradient-to-br from-[#F5F5F5] via-white to-[#F5F5F5] py-16 lg:py-24 overflow-hidden relative">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[#388E3C]/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#81D4FA]/5 rounded-full blur-3xl -z-10"></div>

  <div class="container mx-auto px-6 md:px-8 max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content Section -->
      <div class="order-2 lg:order-1 space-y-6">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#388E3C]/10 rounded-full border border-[#388E3C]/20">
          <Heart class="w-4 h-4 text-[#388E3C]" fill="currentColor" />
          <span class="text-sm font-medium text-[#388E3C] uppercase tracking-wider">{subTitle}</span>
        </div>

        <!-- Title Section -->
        <div class="space-y-3">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 leading-tight">
            {mainTitle}
          </h2>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-[#388E3C] via-[#81D4FA] to-[#FFD700] bg-clip-text text-transparent">
            {strokedText}
          </h1>
        </div>

        <!-- Description -->
        <p class="text-lg text-gray-600 leading-relaxed max-w-xl">
          {description}
        </p>

        <!-- Facilities List -->
        <div class="pt-8 space-y-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {
              facilitiesList.map((item) => {
                const IconComponent = item.icon;
                return (
                  <div class="group flex items-center gap-4 p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-[#388E3C]/30">
                    <div class="flex-shrink-0 p-3 rounded-lg bg-gradient-to-br" style={`background: linear-gradient(135deg, ${item.color}15, ${item.color}25);`}>
                      <IconComponent class="w-6 h-6" style={`color: ${item.color};`} />
                    </div>
                    <span class="text-gray-700 font-medium group-hover:text-[#388E3C] transition-colors duration-300">{item.name}</span>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>

      <!-- Image Section -->
      <div class="order-1 lg:order-2 relative">
        <div class="relative">
          <!-- Main Image -->
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img src={img1Src} alt="Kegiatan Yayasan Sawiyan" class="w-full h-[400px] lg:h-[500px] object-cover" loading="lazy" />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-[#388E3C]/60 via-transparent to-transparent"></div>
            <!-- Badge on Image -->
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-4 shadow-lg">
                <div class="flex items-center gap-3">
                  <div class="p-2 bg-[#388E3C]/10 rounded-lg">
                    <Heart class="w-5 h-5 text-[#388E3C]" fill="currentColor" />
                  </div>
                  <div>
                    <p class="text-sm font-semibold text-gray-800">Bersama Membangun</p>
                    <p class="text-xs text-gray-600">Kebaikan untuk Sesama</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Secondary Image - Floating -->
          <div class="absolute -bottom-8 -right-8 w-48 h-48 lg:w-64 lg:h-64 rounded-2xl overflow-hidden shadow-xl border-4 border-white z-10 hidden md:block">
            <img src={img2Src} alt="Program Kemanusiaan" class="w-full h-full object-cover" loading="lazy" />
            <!-- Decorative corner -->
            <div class="absolute top-0 left-0 w-16 h-16 bg-gradient-to-br from-[#FFD700] to-transparent"></div>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute -top-6 -left-6 w-24 h-24 bg-[#81D4FA]/20 rounded-full blur-xl hidden lg:block"></div>
          <div class="absolute -bottom-12 -left-12 w-32 h-32 bg-[#FFD700]/20 rounded-full blur-xl hidden lg:block"></div>
        </div>
      </div>
    </div>
  </div>
</section>
